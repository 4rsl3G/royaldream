<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title %></title>

  <!-- Fonts / Icons -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet"/>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Toastr -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>

  <!-- AOS -->
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css"/>

  <!-- Gridjs -->
  <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet"/>

  <link rel="stylesheet" href="/assets/app.css?v=<%= assetVer %>"/>
</head>

<body class="bg-white text-slate-900">
  <div id="topProgress" class="top-progress"></div>

  <!-- Public navbar -->
  <header class="sticky top-0 z-40 bg-white/85 backdrop-blur border-b border-slate-200">
    <div class="container-xl h-16 flex items-center justify-between">
      <a href="/" class="flex items-center gap-3" data-spa="1">
        <div class="brand-mark">
          <i class="ri-gamepad-line"></i>
        </div>
        <div>
          <div class="font-extrabold tracking-tight leading-none">Royal Dreams</div>
          <div class="text-xs text-slate-500 leading-none">Top Up Chips • Public</div>
        </div>
      </a>

      <nav class="hidden md:flex items-center gap-2">
        <a class="nav-pill" href="/p/landing" data-spa="1"><i class="ri-home-4-line"></i> Home</a>
        <a class="nav-pill" href="/p/order" data-spa="1"><i class="ri-shopping-bag-3-line"></i> Top Up</a>
        <a class="nav-pill" href="/p/landing#faq" data-spa="1"><i class="ri-question-line"></i> FAQ</a>
      </nav>

      <div class="flex items-center gap-2">
        <button class="icon-btn md:hidden" id="btnMobileNav"><i class="ri-menu-3-line"></i></button>
        <a class="btn btn-primary hidden sm:inline-flex" href="/p/order" data-spa="1">
          <i class="ri-flashlight-line"></i> Top Up Sekarang
        </a>
      </div>
    </div>

    <!-- Mobile nav -->
    <div id="mobileNav" class="md:hidden hidden border-t border-slate-200 bg-white">
      <div class="container-xl py-3 grid gap-2">
        <a class="nav-pill" href="/p/landing" data-spa="1"><i class="ri-home-4-line"></i> Home</a>
        <a class="nav-pill" href="/p/order" data-spa="1"><i class="ri-shopping-bag-3-line"></i> Top Up</a>
        <a class="nav-pill" href="/p/landing#faq" data-spa="1"><i class="ri-question-line"></i> FAQ</a>
      </div>
    </div>
  </header>

  <!-- SPA content -->
  <main class="container-xl py-6 md:py-10" id="spaRoot">
    <div class="skeleton-page">
      <div class="sk-line w-1/3"></div>
      <div class="sk-line w-2/3"></div>
      <div class="sk-card"></div>
      <div class="sk-card"></div>
    </div>
  </main>

  <footer class="border-t border-slate-200 mt-10">
    <div class="container-xl py-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
      <div class="text-sm text-slate-600">
        <div class="font-semibold text-slate-900">Royal Dreams Top Up</div>
        <div>Transaksi cepat • Status realtime • Notifikasi WhatsApp</div>
      </div>
      <div class="flex items-center gap-2 text-sm text-slate-600">
        <span class="badge"><i class="ri-shield-check-line"></i> Secure</span>
        <span class="badge"><i class="ri-time-line"></i> Realtime</span>
        <span class="badge"><i class="ri-customer-service-2-line"></i> Manual Fulfillment</span>
      </div>
    </div>
  </footer>

  <!-- Modal block -->
  <div id="modal" class="modal hidden" aria-hidden="true">
    <div class="modal-backdrop" data-modal-close="1"></div>
    <div class="modal-card" role="dialog" aria-modal="true">
      <div class="modal-head">
        <div class="modal-title" id="modalTitle">Modal</div>
        <button class="icon-btn" data-modal-close="1"><i class="ri-close-line"></i></button>
      </div>
      <div class="modal-body" id="modalBody"></div>
      <div class="modal-foot" id="modalFoot"></div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>

  <script src="/assets/wsrt.js?v=<%= assetVer %>"></script>
  <script src="/assets/app.js?v=<%= assetVer %>"></script>

  <script>
    window.APP = window.APP || {};
    APP.mode = "public";
    APP.adminPath = null;
  </script>
</body>
</html>
