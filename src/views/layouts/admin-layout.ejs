<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= title %></title>

  <!-- Fonts / Icons -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet"/>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Toastr -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"/>

  <!-- AOS -->
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css"/>

  <!-- Gridjs -->
  <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet"/>

  <link rel="stylesheet" href="/assets/app.css?v=<%= assetVer %>"/>
</head>

<body class="bg-white text-slate-900">
  <div id="topProgress" class="top-progress"></div>

  <div class="admin-layout">
    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
      <div class="admin-brand">
        <div class="brand-mark"><i class="ri-shield-keyhole-line"></i></div>
        <div>
          <div class="font-extrabold leading-none tracking-tight">Admin Panel</div>
          <div class="text-xs text-slate-500 leading-none">Royal Dreams</div>
        </div>
      </div>

      <div class="admin-nav">
        <a class="admin-link" href="/<%= adminPath %>/p/dashboard" data-spa="1"><i class="ri-dashboard-2-line"></i> Dashboard</a>
        <a class="admin-link" href="/<%= adminPath %>/p/orders" data-spa="1"><i class="ri-file-list-3-line"></i> Orders</a>
        <a class="admin-link" href="/<%= adminPath %>/p/products" data-spa="1"><i class="ri-store-2-line"></i> Products</a>
        <a class="admin-link" href="/<%= adminPath %>/p/withdraw" data-spa="1"><i class="ri-bank-card-line"></i> Withdraw</a>
        <a class="admin-link" href="/<%= adminPath %>/p/whatsapp" data-spa="1"><i class="ri-whatsapp-line"></i> WhatsApp</a>
        <a class="admin-link" href="/<%= adminPath %>/p/settings" data-spa="1"><i class="ri-settings-3-line"></i> Settings</a>
        <a class="admin-link" href="/<%= adminPath %>/p/audit" data-spa="1"><i class="ri-history-line"></i> Audit</a>
        <a class="admin-link" href="/<%= adminPath %>/p/logs" data-spa="1"><i class="ri-terminal-box-line"></i> Live Logs</a>
      </div>

      <div class="admin-sidefoot">
        <button class="btn btn-ghost w-full" id="btnLogout"><i class="ri-logout-box-r-line"></i> Logout</button>
        <div class="text-xs text-slate-500 mt-3">Tip: reply WA admin<br><b>done ORDERID</b> / <b>reject ORDERID</b></div>
      </div>
    </aside>

    <!-- Content -->
    <section class="admin-main">
      <header class="admin-topbar">
        <button class="icon-btn md:hidden" id="btnSidebar"><i class="ri-menu-2-line"></i></button>
        <div class="flex items-center gap-2">
          <span class="badge" id="wsBadge"><i class="ri-wifi-line"></i> WS: <b>OFF</b></span>
          <span class="badge" id="waBadge"><i class="ri-whatsapp-line"></i> WA: <b>...</b></span>
        </div>
      </header>

      <main class="admin-content" id="spaRoot">
        <div class="skeleton-page">
          <div class="sk-line w-1/3"></div>
          <div class="sk-line w-2/3"></div>
          <div class="sk-card"></div>
          <div class="sk-card"></div>
        </div>
      </main>
    </section>
  </div>

  <!-- Modal block + boot script -->
  <div id="modal" class="modal hidden" aria-hidden="true">
    <div class="modal-backdrop" data-modal-close="1"></div>
    <div class="modal-card" role="dialog" aria-modal="true">
      <div class="modal-head">
        <div class="modal-title" id="modalTitle">Modal</div>
        <button class="icon-btn" data-modal-close="1"><i class="ri-close-line"></i></button>
      </div>
      <div class="modal-body" id="modalBody"></div>
      <div class="modal-foot" id="modalFoot"></div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>

  <script src="/assets/wsrt.js?v=<%= assetVer %>"></script>
  <script src="/assets/app.js?v=<%= assetVer %>"></script>

  <script>
    window.APP = window.APP || {};
    APP.mode = "admin";
    APP.adminPath = "<%= adminPath %>";
  </script>
</body>
</html>
